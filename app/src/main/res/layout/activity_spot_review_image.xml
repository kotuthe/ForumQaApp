<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGroupTableViewBackground"
    tools:context=".ActivitySpotReviewImage">

    <LinearLayout
        android:id="@+id/layoutUser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="@dimen/normal_margin"
        android:background="#AA000000">

        <ImageView
            android:id="@+id/imageViewUserIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Name"/>

            <TextView
                android:id="@+id/textViewUserDetail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Detail"/>

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/textViewOtherNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:padding="4dp"
            android:background="@drawable/txt_other_image_number"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="他0枚" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutReview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="@dimen/normal_margin"
        android:background="#AA000000">

        <TextView
            android:id="@+id/textViewReview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Review"/>

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="@dimen/row_anchor_size"
            android:layout_height="@dimen/row_left_anchor_height"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_gravity="center"
            android:src="@drawable/ic_left_arrow_gray"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
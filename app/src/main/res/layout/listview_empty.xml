<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/normal_safe_area_margin"
        android:paddingRight="@dimen/normal_safe_area_margin"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="@dimen/list_view_empty_image_size"
            android:layout_height="@dimen/list_view_empty_image_size"
            android:scaleType="centerInside"
            android:src="@drawable/img_error_sorry"/>
        <TextView
            android:id="@+id/textViewMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="messag"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
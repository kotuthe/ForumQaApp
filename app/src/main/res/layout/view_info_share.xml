<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorGroupTableViewBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"
            android:text="title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/normal_safe_area_margin"
        android:paddingRight="@dimen/normal_safe_area_margin"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_spot_info_share_btn_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonMail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_weight="1"
                android:background="@drawable/btn_link"
                style="?android:attr/buttonBarButtonStyle"
                android:gravity="start|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/share_mail"
                android:textColor="@color/colorLinkBlue" />

            <Button
                android:id="@+id/buttonLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/btn_link"
                style="?android:attr/buttonBarButtonStyle"
                android:text="@string/share_line"
                android:textAllCaps="false"
                android:paddingLeft="10dp"
                android:textColor="@color/colorLinkBlue"
                android:gravity="start|center_vertical"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewCopyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="copy title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_spot_info_share_height"
            android:layout_marginTop="4dp"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/textViewCopy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_margin"
                android:background="@drawable/txt_share"
                android:paddingBottom="@dimen/normal_margin"
                android:paddingLeft="@dimen/normal_margin"
                android:paddingRight="@dimen/normal_margin"
                android:paddingTop="@dimen/normal_margin"
                android:text="share text"
                android:textSize="@dimen/font_size_normal"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySpotSearchNarrowArea">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGroupTableViewBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <net.tochinavi.www.tochinaviapp.view.ExpandableListViewDyamicFit
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:divider="@null"
                android:groupIndicator="@null"/>

            <!-- Button分のマージン -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/cmn_btn_ok_cancel_height"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>

    </ScrollView>

    <!-- Footerボタン -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGroupTableViewBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp">

        <!-- 条件をクリア -->
        <net.tochinavi.www.tochinaviapp.view.ButtonCancel
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="@dimen/cmn_btn_ok_cancel_height"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="@string/spot_search_narrow_area_clear"
            android:textSize="13sp"
            android:textStyle="bold"/>
        <!-- 検索 -->
        <net.tochinavi.www.tochinaviapp.view.ButtonAction
            android:id="@+id/buttonSearch"
            android:layout_width="0dp"
            android:layout_height="@dimen/cmn_btn_ok_cancel_height"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="@string/spot_search_narrow_area_done"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>